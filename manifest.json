{
  "manifest_version": 3,
  "name": "Toggle Background",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}